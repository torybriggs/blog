<!doctype html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
		<link rel="alternate" type="application/rss+xml" 
		title="torybriggs" href="http://feeds.feedburner.com/torybriggs" />
		<link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
		<meta name="description" content="<%= @context[:description] || 'A blog by Tory Briggs about the arts, technology, programming, gaming and entertainment.' %>">
    <title>
		<% if @path == 'index' %>
		    torybriggs.com
		<% elsif @path.split('/').compact.length == 4 %>
		    <%= title %> - torybriggs.com
		<% else %>
		    <%= @path.capitalize.gsub(/[-]/, ' ') %> - torybriggs.com
		<% end %>
		</title>
  </head>
  <body>
		<div id="wrapper">
			<header>
				<h1>
					<a href="/" title="torybriggs.com" alt="torybriggs.com" rel="home">
						torybriggs.com the web, curated.
						</a>
					</h1>			
			</header>
			<a href="/colophon#beta-badge"><img id="beta" src="images/beta-badge.png" title="torbriggs.com is still in beta. Check back often for updates" alt="torybriggs.com is still in beta. Check back often for updates" /></a>
			<div class="clear"></div>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li <%= ' class="active"' if @path == 'archives' %>>
						<a href="/archives">Archives</a>
					</li>
					<li <%= ' class="active"' if @path == 'colophon' %>>
						<a href="/colophon">Colophon</a>
					</li>
					<li <%= ' class="active"' if @path == 'contact' %>>
						<a href="/contact">Contact</a>
					</li>
					<li>
						<a href="http://feeds.feedburner.com/torybriggs">Subscribe</a>
					</li>
				</ul>
			</nav>
		
			<div class="clear"></div>
			<hr />
		
	    <section id="main">
	      <%= yield %> 
	    </section>
		
	    <footer>
	      follow Tory <a href="http://twitter.com/torybriggs">on twitter</a>
	    </footer>
	
		</div>
